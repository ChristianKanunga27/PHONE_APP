<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.PHONE_SHOP_APP" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Splash Screen Background WHITE -->
        <item name="android:windowSplashScreenBackground">@color/white</item>


        <!-- Optional icon background -->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>

    </style>

    <style name="Theme.PHONE_SHOP_APP" parent="Base.Theme.PHONE_SHOP_APP" />

    <style name="Theme.PHONE_SHOP_APP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PHONE_SHOP_APP.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PHONE_SHOP_APP.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

</resources>