<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed/checked state gets slight highlight, default is transparent so nav menu black shows through -->
    <item android:state_checked="true" android:drawable="@color/nav_menu_bg_black" />
    <item android:state_pressed="true" android:drawable="@color/nav_menu_bg_black" />
    <item android:drawable="@android:color/transparent" />
</selector>

